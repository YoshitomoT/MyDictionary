<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.app.mapper.DictWordMapper">
	
	<select id="selectWordIdWithDictInfo" resultType="Long">
	SELECT 
		word_id
	FROM 
		dictionary_db.dictionary_word
	GROUP BY 
		word_id
	ORDER BY 
		word_id ASC
	</select>
	
	
	<delete id="deleteDictWordByWordId" parameterType="Long">
		DELETE FROM 
			dictionary_word 
		WHERE 
			word_id = #{editedWordId}
	</delete>
	
	<insert id="insertDictWordByWordIdAndDictId">
		INSERT INTO 
			dictionary_word(`word_id`, `dictionary_id`) 
		VALUES
			(#{editedWordId}, #{editedDictId});
	</insert>
	
	

	
		
</mapper>
